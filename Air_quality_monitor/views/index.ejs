<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>График качества воздуха</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <h1>Качество воздуха с 14 февраля по 14 марта 2025 года</h1>

  <canvas id="airQualityChart" width="600" height="400"></canvas>

  <script>
    // Даты передаются как строка JSON, поэтому мы преобразуем их в объекты Date
    const dates = <%- JSON.stringify(dates) %>.map(date => new Date(date));
    const airQualityData = <%= airQualityData %>;
    const pollenData = <%= pollenData %>;
    const dustData = <%= dustData %>;

    console.log("Dates: ", dates); // Должны быть реальные даты в формате объекта Date
    console.log("Air Quality Data: ", airQualityData);
    console.log("Pollen Data: ", pollenData);
    console.log("Dust Data: ", dustData);

    const ctx = document.getElementById('airQualityChart').getContext('2d');
    const airQualityChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: dates, // Теперь dates — это объекты Date
        datasets: [
          {
            label: 'Качество воздуха',
            data: airQualityData,
            borderColor: 'rgb(75, 192, 192)',
            fill: false
          },
          {
            label: 'Пыльца',
            data: pollenData,
            borderColor: 'rgb(255, 159, 64)',
            fill: false
          },
          {
            label: 'Пыль',
            data: dustData,
            borderColor: 'rgb(153, 102, 255)',
            fill: false
          }
        ]
      },
      options: {
        responsive: true,
        scales: {
          x: {
            type: 'time',
            time: {
              unit: 'day'
            }
          },
          y: {
            min: 0,
            max: 22
          }
        }
      }
    });
  </script>
</body>
</html>
